{
	"name": "シンジー",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "使ったらすぐ無効にしてね",
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"browser_action": {
		"default_title": "シンジー",
		"default_icon": {
			"19": "img/icon19.png",
			"38": "img/icon38.png"
		},
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"http://www.nicovideo.jp/*",
				"https://www.nicovideo.jp/*",
				"http://live.nicovideo.jp/*",
				"https://live.nicovideo.jp/*"
			],
			"css": ["css/style.css"],
			"js": [
				"js/jquery-2.2.4.min.js",
				"js/content.js"
			],
			"run_at": "document_idle"
		}
	],
	"web_accessible_resources": [
		"img/*"
	],
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"storage",
		"unlimitedStorage"
	]
}